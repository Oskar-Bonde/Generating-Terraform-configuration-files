terraform {
  required_providers {
    google = {
      source = "hashicorp/google"
    }
  }
}

# google provider block with only region set to europe north1
provider "google" {
}

# a compute instance that has boot disk debian-9 image, network interface default, is type f1-micro and has a name of the instance
resource "google_compute_instance" "name_0" {
  name = "my-compute-instance-boot-disk-${random_suffix}"
  machine_type = "f1-micro"

  boot_disk {
    initialize_params {
      image = "debian-cloud/debian-9"
    }
  }

  network_interface {
    network = "default"    
    access_config {
    }
  }
}

